@using HomeWallet.Models.ReceiptViewModels
@using HtmlHelpers.BeginCollectionItemCore
@model HomeWallet.Models.ReceiptViewModels.AddProductViewModel

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
}
<div class="listproduct">
  @using (Html.BeginCollectionItem(nameof(CreateReceiptViewModel.Products)))
  {
    @Html.EditorFor(model => model.Price)
    @Html.EditorFor(model => model.Amount)
    @Html.EditorFor(model => model.Product.Name)
    <button type="button" id="removeproductbutton">Remove</button>


  }
</div>