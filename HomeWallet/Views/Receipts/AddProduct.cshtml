@using HomeWallet.Models.ReceiptViewModels
@using HtmlHelpers.BeginCollectionItemCore
@model HomeWallet.Models.ReceiptViewModels.AddProductViewModel

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
}
<div class="listproduct">
  @using (Html.BeginCollectionItem(nameof(CreateReceiptViewModel.Products)))
  {

    @Html.HiddenFor(model => model.Price)
    @Html.HiddenFor(model => model.Amount)
    @Html.HiddenFor(model => model.Product.Name)
    @Html.HiddenFor(model => model.Product.ID)

      <div class="productslinecreate">
          <div class="col-md-2 buttonproductcreate">
            <button class="btn btn-danger btn-xs" type="button" id="removeproductbutton"><small><span class="glyphicon glyphicon-remove"></span></small></button>
          </div>
          <div class="col-md-3 nameproductcreate">
              @Html.DisplayFor(model => model.Product.Name)
          </div>
          <div class="col-md-3 amountproductcreate">
              @Html.DisplayFor(model => model.Amount)
          </div>
          <div class="col-md-2 priceproductcreate">
              @Html.DisplayFor(model => model.Price)
          </div>
          <div class="col-md-2 producttotalcreate">
              @Html.DisplayFor(model => model.Total)
          </div>
      </div>
    
    
  }
</div>