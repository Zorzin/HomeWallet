@using HomeWallet.Models.ReceiptViewModels
@using HtmlHelpers.BeginCollectionItemCore
@model HomeWallet.Models.ReceiptViewModels.AddProductViewModel

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
}
<div class="listproduct">
  @using (Html.BeginCollectionItem(nameof(CreateReceiptViewModel.Products)))
  {

    @Html.HiddenFor(model => model.Price)
    @Html.HiddenFor(model => model.Amount)
    @Html.HiddenFor(model => model.Product.Name)

      <div class="col-md-12">
          <div class="col-md-8">
            @Html.DisplayFor(model => model.Product.Name)
          </div>
          <div class="col-md-2">
            @Html.DisplayFor(model => model.Amount)
          </div>
          <div class="col-md-2">
            @Html.DisplayFor(model => model.Price)
          </div>

      </div>
    
    <button type="button" id="removeproductbutton">Remove</button>
  }
</div>