@model HomeWallet.Models.ProductViewModels.CreateProductViewModel

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
}
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
<script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/jquery-ui.min.js"></script>
<script src="~/js/chosen.jquery.js"></script>
<link rel="stylesheet" href="~/css/chosen.css">

<form id="addproductform">
    <p>Product:</p>
    <select id="selectproduct" data-placeholder="Select product" asp-for="ProductID" class="form-control chosen-single-select" asp-items="ViewBag.Products"></select>
    <div class="checkbox">
      <label><input id="newproductcheckbox" type="checkbox" asp-for="isNew" /> New product</label>
    </div>  
    <div id="newproduct">
      <p>Name:</p>
        <input asp-for="Name" class="form-control" placeholder="Name"/>
      <p>Categories:</p>
        <select data-placeholder="Select categories" asp-for="Categories" class="form-control chosen-group-select" multiple="multiple"></select>
    </div>
    <p>Amount:</p>
    <input type="number" asp-for="Amount" class="form-control" placeholder="Amount"/>
    <p>Price per unit:</p>
    <input type="number" asp-for="Price" class="form-control" placeholder="Price per unit"/>
</form>

<script src="@Url.Content("~/js/chosen.jquery.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document) 
      .ready(function () {

            $('.chosen-group-select').chosen();
            $('.chosen-single-select').chosen();
            $('#newproduct').hide();
        });
</script>

