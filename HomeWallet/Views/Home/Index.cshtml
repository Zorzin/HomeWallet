}

<div class="container">
    <div class="row dayheader">
        <div class="col-xs-6 col-md-8 datetextfield">
            <label class="datefield"> 01.01.0001</label>
        </div>
        <div class="col-xs-6 col-md-4 summarybutton">
            <button class="btn btn-default">Summary</button>
        </div>
    </div>
    <hr />
    <a href="@Url.Action("Create","Receipts")">
        <div class="col-md-3 col-xs-6 receiptsummary">
            <div class="shoptextfield">
                <h1>Add</h1>
            </div>
            <div class="pricetextfield">
                <h3>new</h3>
            </div>
        </div>
    </a>
</div>

<div class="container">
    <div class="row dayheader">
        <div class="col-xs-6 col-md-8 datetextfield">
            <label class="datefield"> 02.01.0001</label>
        </div>
        <div class="col-xs-6 col-md-4 summarybutton">
            <button class="btn btn-default">Summary</button>
        </div>
    </div>
    <hr />
    <a href="#">
        <div class="col-md-3 col-xs-6 receiptsummary">
            <div class="shoptextfield">
                <h1>Add</h1>
            </div>
            <div class="pricetextfield">
                <h3>new</h3>
            </div>
        </div>
    </a>
</div>

<div class="morereceipts"></div>

<div class="col-md-12 morebuttondiv">
    <button id="addreceiptbutton" class="btn btn-default showmorebutton">Show More</button>
</div>


<script>

    $('#addreceiptbutton').click(function() {
        var lastId;
        if ($('.datefield').last().text() != null) {
            lastId = $('.datefield').last().text();
        } else {
            lastId = 0;
        }
        jQuery.get('/Home/GetReceipts',
            {
                lastDate: lastId
            })
            .done(function(html) {
                $('.morereceipts').append(html);
            });
    });
</script>
