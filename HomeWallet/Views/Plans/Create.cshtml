@model HomeWallet.Models.PlanViewModels.CreatePlanViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Plan</h4>
        <hr />
        <p>I want to spend no more than</p>
        <input type="number" min="0" asp-for="Amount" class="form-control" />
        <p>starting from </p>
        <input type="date" value="@DateTime.Today.ToString("yyyy-MM-dd")" asp-for="StartDate" class="form-control" />
        <p>to</p>
        <input type="date" value="@DateTime.Today.AddMonths(1).ToString("yyyy-MM-dd")" asp-for="EndDate" class="form-control" />
      
        <input type="submit" value="Create" class="btn btn-default" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

